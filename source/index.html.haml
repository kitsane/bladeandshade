!!!
%html.no-js{ lang: 'de' }
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    %title Blade & Shade

    %meta{ content: '', name: 'description' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'

%body#home
  #carousel-header.carousel.slide
    .carousel-inner
      .item.active
        .carousel.image-container.welcome
      .item
        .carousel.image-container.piercings
      .item
        .carousel.image-container.team

    .image-container.logo-container
      .logo
        = image_tag 'logo/logo_white.png'
  #page
    .nav-wrapper
      %nav.navbar.navbar-inverse{role: "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{ data: { target: ".collapse", toggle: "collapse" }, type: "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.scroll-to.navbar-brand{ href: '#home' }
              = image_tag 'logo/logo_white.png'
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                %a.scroll-to{ href: '#piercings' } Piercings
              %li
                %a.scroll-to{ href: '#tattoos' } Tattoos
              %li
                %a.scroll-to{ href: '#team' } Team
              %li
                %a.scroll-to{ href: '#contact' } Kontakt
    .container
      .row
        .col-md-12
          %p
            = lorem.paragraphs 2

    .image-container.piercings
      #piercings
        .container-fluid
          .row
            %h1.no-bg
              Piercings
    .container
      .row
        .col-md-12
          %p
            = lorem.paragraphs 2

    .image-container.tattoos
      #tattoos
        .container-fluid
          .row
            %h1.no-bg
              Tattoos
    .container
      .row
        .col-md-12
          %p
            = lorem.paragraphs 2

    .image-container.team
      #team
        .container-fluid
          .row
            %h1.no-border
              Team
    .container
      .row
        .col-md-12
          %p
            = lorem.paragraphs 2

    .image-container.contact
      #contact
        .container-fluid
          .row
            %h1
              Kontakt
    .container
      .row
        .col-md-12
          %p
            = lorem.paragraphs 2

